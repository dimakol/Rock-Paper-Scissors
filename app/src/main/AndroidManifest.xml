<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.devsoul.dima.rock_paper_scissors">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MenuActivity"/>
        <activity android:name=".Activities.RulesActivity">
        </activity>
        <activity android:name=".Activities.Choose">
        </activity>
        <activity android:name=".Activities.EndActivity">
        </activity>
        <activity android:name=".Activities.GamePlay">
        </activity>
        <activity android:name=".Activities.BluetoothActivity">
        </activity>

    </application>

</manifest>