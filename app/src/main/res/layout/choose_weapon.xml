<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Activities.Choose">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Weapon"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtn_rock"
            android:src="@drawable/rock"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView"
            android:paddingTop="10dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtn_paper"
            android:src="@drawable/paper"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_below="@id/imgbtn_rock"
            android:paddingTop="10dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtn_scissors"
            android:src="@drawable/scissors"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_below="@id/imgbtn_paper"
            android:paddingTop="10dp"/>
</RelativeLayout>
